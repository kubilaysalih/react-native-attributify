{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-native",
    "outDir": "./dist",
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "presets/native/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}